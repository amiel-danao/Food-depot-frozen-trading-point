<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtPlateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:startIconDrawable="@drawable/ic_role">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vehicle Plate No."
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtGas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:startIconDrawable="@drawable/ic_baseline_local_gas_station_24">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fuel Consumption"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtvehicletype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:startIconDrawable="@mipmap/ic_launcher_foreground">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vechicle Type"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1"/>
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/orange_2"
                android:text="Add vehicle"
                android:textColor="@color/blue_1" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
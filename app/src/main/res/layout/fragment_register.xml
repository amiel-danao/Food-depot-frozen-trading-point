<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:startIconDrawable="@drawable/ic_email">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:startIconDrawable="@drawable/ic_person">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtrole"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:startIconDrawable="@drawable/ic_role">

                <AutoCompleteTextView
                    android:id="@+id/selectionrole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:hint="Select a Role"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:outlineSpotShadowColor="#ff0000"
                android:textColorHint="@color/black"
                android:theme="@style/EditTextHintBlue"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/ic_password">
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue_1"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/orange_2"
                android:text="Register"
                android:textColor="@color/blue_1"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>